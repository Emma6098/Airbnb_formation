<div class="container py-5">
<div class="mb-4">
  <%= form_tag formations_path, method: :get, class: "form-inline" do %>
    <div class="input-group">
      <%= text_field_tag :keyword, params[:keyword], class: "form-control", placeholder: "Rechercher par mot-clÃ©" %>
      <div class="input-group-append">
        <%= submit_tag "Rechercher", class: "btn button-reserver" %>
      </div>
    </div>
  <% end %>
</div>
  <div class="d-flex align-items-center justify-content-between mb-5">
    <h2 class="mb-0">Liste des formations disponibles : </h2>

    <%= link_to "Ajouter une formation", new_formation_path, class: "btn btn-flat" %>
  </div>
  <div class="row d-flex justify-content-center">
    <% @formations.each do |formation| %>
      <div class="card col-3 col-sm-6 col-md-4 mt-3 mb-3 p-3 border">
        <%= link_to formation_path(formation), class: "card-body text-decoration-none" do %>
          <div>
            <h3 class="text-dark"><%= formation.title %></h3>
            <p><%= formation.date %></p>
            <p class="theme"><%= formation.theme %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
