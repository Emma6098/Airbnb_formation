<h2>Connexion</h2>
<div class="containernewformations">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="session-form">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
      <div class= "btns-flex">
        <%= f.button :submit, "Se connecter", class: "btn-log-in" %>
        <%= render "devise/shared/links", label: "S'inscrire" %>
      </div>
    </div>
  <% end %>
</div>
